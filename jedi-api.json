    "Outputs": {
        "RegisterUserFunctionARN": {
            "Value": {
                "Fn::GetAtt": [
                    "RegisterUserFunction",
                    "Arn"
                ]
            }
        },
        "FetchLeaderboardFunctionARN": {
            "Value": {
                "Fn::GetAtt": [
                    "FetchLeaderboardFunction",
                    "Arn"
                ]
            }
        },
        "JediApi": {
            "Value": {
                "Ref": "JediApi"
            }
